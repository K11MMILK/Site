@model First_site_V2.Storage.Entities.Profile
@{
    ViewData["Title"] = $"{@Model.Name} {@Model.Surname}";
}


<div style="float: left; width: 20%;">
    <form action =@Model.PNG target="_blank">
        <button >
            <img src=@Model.PNG height="300" width="300"/>
        </button>
    </form>
</div>
<div style="float: right; width: 75%;">
    <div class="col-2-3">
        <h2>@Model.Name @Model.Surname</h2>
        <p>@Model.Status</p>
    </div>
</div>