@model First_site_V2.Storage.Entities.Profile
@{
    ViewData["Title"] = $"{@Model.Name} {@Model.Surname}";
}

<div class="main">
    <div class="container">
        <div class="row">
            <div style="float: left; width: 25%;height:300px;">
                <form action =@Model.PNG target="_blank">
                    <button >
                        <img src=@Model.PNG height="275" width="275"/>
                    </button>
                </form>
            </div>

            <div style="float: right; width: 72%;height:300px;">
                <div class="col-2-3">
                    <h2>@Model.Name @Model.Surname</h2>
                    <p>@Model.Status</p>
                </div>
            </div>

        </div>
        <div class="row">
            <div style="float: left; width: 25%;height:30px;">
                <form asp-controller="PersonProfile" asp-action="AddFriend" method="get">
                    <input type="hidden" value=@Model.Login name="login" />
                    <button type="submit">Подписаться</button>
                </form>
            </div>
        </div>
         <div class="row">
            <div style="float: left; width: 25%;height:30px;">
                <form asp-controller="PersonProfile" asp-action="GetReportOnUser" method="get">
                    <button type="submit">Пожаловаться</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div style="float: left; width: 25%;height:30px;">
                <form asp-controller="PersonProfile" asp-action="AllPictures" method="get">
                    <input type="hidden" value=@Model.Id name="PersonId" />
                    <button type="submit">Все Фото</button>
                </form>
            </div>
        </div>

    </div>
</div>